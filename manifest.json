{
    "name": "Noalyss",
    "id": "noalyss",
    "packaging_format": 1,
    "description": {
        "en": "Accounting free software (Beligum and French accounting)",
        "fr": "Logiciel libre de comptabilité (comptabilité Belge et Française)"
    },
    "version": "8.0~ynh1",
    "url": "http://noalyss.eu",
    "license": "AGPL-3.0-only",
    "maintainer": {
        "name": "datatierce",
        "email": "github@computhings.be",
        "url": "https://computhings.be"
    },
    "requirements": {
        "yunohost": ">= 4.0.0"
    },
    "multi_instance": false,
    "services": [
        "nginx",
        "php7.0-fpm"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain name for Noalyss",
                    "fr": "Choisissez un nom de domaine pour Noalyss"
                },
                "example": "example.com"
            },
            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for Noalyss",
                    "fr": "Choisissez un chemin pour Noalyss"
                },
                "example": "/noalyss",
                "default": "/noalyss"
            },
            {
                "name": "admin",
                "type": "user",
                "ask": {
                    "en": "Choose the Mantis administrator",
                    "fr": "Choisissez l’administrateur de Mantis"
                }
            },
            {
                "name": "is_public",
                "type": "boolean",
                "ask": {
                    "en": "Is it a public application?",
                    "fr": "Est-ce une application publique ?"
                },
                "default": true
            },
            {
                "name": "language",
                "type": "string",
                "ask": {
                    "en": "Choose the application language",
                    "fr": "Choisissez la langue de l'application"
                },
                "choices": ["fr", "en"],
                "default": "fr"
            }
        ]
    }
}
